#!/usr/bin/env bash
# Summary: delete nomad dev instance

csource="${BASH_SOURCE[0]}"
while [ -h "$csource" ] ; do csource="$(readlink "$csource")"; done
root="$( cd -P "$( dirname "$csource" )/" && pwd )" || exit 1

. "${root}/common.bash" || exit

unset CLUSTER_INSTANCE_PREFIX

warn "Destroying nomad development instance"
incus delete --force nomad-dev || exit

success "development instance deleted"

